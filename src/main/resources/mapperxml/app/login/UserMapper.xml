<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.lfdevelopment.www.app.common.login.mapper.UserMapper">

    <select id="selectUserByName" resultType="cn.lfdevelopment.www.app.common.login.pojo.SysUser">
        SELECT *
        FROM sys_user
        where loginName = #{name}
    </select>
</mapper>